<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.galileo.sp1.tarea1" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StoreListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StoreDetailActivity"
            android:label="@string/title_store_detail"
            android:parentActivityName=".StoreListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StoreListActivity" />
        </activity>
    </application>

</manifest>
